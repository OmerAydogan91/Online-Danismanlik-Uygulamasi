
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Admin Panel</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/Content/admintemplate/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/admintemplate/css/sb-admin.css" rel="stylesheet" />
    <!-- Morris Charts CSS -->
    <link href="~/Content/admintemplate/css/plugins/morris.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/Content/admintemplate/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Administrator</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Admin <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="~/Anasayfa/CikisYap"><i class="fa fa-fw fa-power-off"></i> Çıkış Yap</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#proje"><i class="glyphicon glyphicon-edit"></i> Proje <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="proje" class="collapse">
                            <li>
                                <a href="~/Admin/Proje/ProjeEkle">Proje Ekle</a>
                            </li>
                            <li>
                                <a href="~/Admin/Proje/Listele">Projeleri Listele</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#foto"><i class="glyphicon glyphicon-camera"></i> Proje Fotoğrafları <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="foto" class="collapse">
                            <li>
                                <a href="~/Admin/Proje/FotografListesi">Fotoğrafları Listele</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#kategori"><i class="glyphicon glyphicon-edit"></i> Kategori <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="kategori" class="collapse">
                            <li>
                                <a href="~/Admin/Kategori/KategoriEkle">Kategori Ekle</a>
                            </li>
                            <li>
                                <a href="~/Admin/Kategori/Listele">Kategori Listele</a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#yorum"><i class="glyphicon glyphicon-comment"></i> Yorumlar <i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="yorum" class="collapse">
                            <li>
                                <a href="~/Admin/Yorum/OnayliYorumlar">Onaylanmış Yorumlar</a>
                            </li>
                            <li>
                                <a href="~/Admin/Yorum/OnayBekleyenYorum">Onay Bekleyen Yorumlar</a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
                <!-- /.container-fluid -->
            </div>
            <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->
        <!-- jQuery -->
        <script src="~/Content/admintemplate/js/jquery.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/Content/admintemplate/js/bootstrap.min.js"></script>
        <!-- Morris Charts JavaScript -->
        <script src="~/Content/admintemplate/js/plugins/morris/raphael.min.js"></script>
        <script src="~/Content/admintemplate/js/plugins/morris/morris.min.js"></script>
        <script src="~/Content/admintemplate/js/plugins/morris/morris-data.js"></script>
</body>
</html>